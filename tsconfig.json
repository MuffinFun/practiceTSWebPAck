{
  "compilerOptions": {
    "target": "ESNext",
    "noEmit": false,
    "allowJs": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "public",
  },
  "exclude": ["node_modules", "webpack.config.js"]
}
